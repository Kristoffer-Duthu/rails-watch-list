<div class="banner d-flex justify-content-center align-items-center">
  <div class="inner">
   <h1> <%= @list.name %> </h1>
     <div>
       <%= link_to "Add new Bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %> ||
       <%= link_to "Back to Lists", lists_path(@lists), class: "btn btn-outline-primary" %>
     </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @list.movies.each do |movie| %>
        <div class="col-4 my-3">
          <div data-aos="zoom-out-down" class="card" style="width: 18rem;">
            <%= image_tag movie.poster_url, alt:"#{movie.title} image" %>
            <p class="rating"> Rating: <%= movie.rating %> </p>
            <div class="card-body">
              <h5 class="card-title"> <%= movie.title %> </h5>
               <% movie.bookmarks.each do |bookmark| %>
                <% if bookmark.list_id == @list.id %>
                <p class="card-text">  <i class="fas fa-quote-left"></i>  <em> <%= bookmark.comment %> </em> <i class="fas fa-quote-right"></i> </p>
                <%= link_to "Delete Bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

